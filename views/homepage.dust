
{>"layouts/main"/}

{<body}

  <div id="map"></div>

  <script>
    var map = L.map('map').setView([54.044902, -2.799261], 13);

    L.tileLayer('http://{~lb}s{~rb}.tile.osm.org/{~lb}z{~rb}/{~lb}x{~rb}/{~lb}y{~rb}.png', {
    attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
}).addTo(map);

L.marker([54.044902,-2.799261]).addTo(map)
    .bindPopup('Lancaster City Centre')
    .openPopup();
  </script>

{/body}
